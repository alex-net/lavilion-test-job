{
    "require": {
        "yiisoft/yii2": "~2.0.0",
        "yiisoft/yii2-debug": "^2.1",
        "yiisoft/yii2-bootstrap5": "^2.0"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "scripts": {
        "test": "phpunit"
    },
    "autoload": {
        "files": ["vendor/yiisoft/yii2/Yii.php"]
